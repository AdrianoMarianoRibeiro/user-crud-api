# Configurações do servidor
PORT=3000
NODE_ENV=development

# Configurações do banco de dados SQLite
DATABASE_TYPE=sqlite
DATABASE_NAME=database.sqlite

# Configurações JWT (caso decida implementar autenticação futuramente)
# JWT_SECRET=sua_chave_secreta_jwt
# JWT_EXPIRATION=1h

# Configurações de logging
LOG_LEVEL=debug

# Diretório para armazenar a sessão do WhatsApp
WHATSAPP_SESSION_DIR=./whatsapp-session

# Caminho opcional para o executável do Chrome (necessário em alguns ambientes)
CHROME_BIN=/usr/bin/chromium-browser